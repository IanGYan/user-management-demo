{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/setup.ts"
  ],
  "testTimeout": 30000,
  "collectCoverageFrom": [
    "<rootDir>/../src/**/*.(t|j)s",
    "!<rootDir>/../src/**/*.spec.ts",
    "!<rootDir>/../src/**/*.module.ts",
    "!<rootDir>/../src/main.ts"
  ],
  "coverageDirectory": "<rootDir>/../coverage-e2e",
  "coverageReporters": ["text", "lcov"]
}
